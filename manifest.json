{
  "manifest_version": 2,

  "name": "My Profiles",
  "version": "1.0.0",
  "author": "Isma√Øl BENHALLAM",
  "description": "This extension will hold your profiles' links (GitHub, LinkedIn...) for quick access",

  "browser_action": {
   "default_icon": "icons/icon.png",
   "default_popup": "views/popup.html"
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+M",
        "mac": "Command+M"
      },
      "description": "Show extention popup."
    }
  },

  "permissions": [
    "storage"
  ],

  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}